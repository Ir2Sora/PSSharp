@model PSSharp.Models.PeerReview

@{
    ViewBag.Title = "Экспертная оценка";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<script>
    $(document).ready(function () {
        $("form").validate();
    });
</script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Suggestion</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Direction.Suggestion.SuggestionId)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.Direction.Suggestion.SuggestionId)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Direction.Suggestion.User)
        </div>
        <div class="editor-field">
            @Model.Direction.Suggestion.User.View()
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Direction.Suggestion.Problem)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.Direction.Suggestion.Problem)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Direction.Suggestion.Solution)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.Direction.Suggestion.Solution)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Direction.Suggestion.Result)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.Direction.Suggestion.Result)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Recommended)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Recommended)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Conclusion)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Conclusion, new { @class = "required" })
            @Html.ValidationMessageFor(model => model.Conclusion)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Direction.Suggestion.DateOfReceipt)
        </div>
        <div class="editor-field">
            @Model.Direction.Suggestion.DateOfReceiptView()
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Direction.Suggestion.DateOfConsideration)
        </div>
        <div class="editor-field">
            @Model.Direction.Suggestion.DateOfConsiderationView()
        </div>

        @Html.Hidden("DirectionId", Model.Direction.DirectionId)

        <p>
            <input type="submit" value="Сохранить" />
        </p>

    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
