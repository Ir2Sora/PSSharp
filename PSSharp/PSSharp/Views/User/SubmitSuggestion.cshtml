@{
    ViewBag.Title = "Подача инициативы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
    <h2>@ViewBag.Message</h2>
</hgroup>

<section>

    <script type="text/javascript">
        $(function () {
            $("form").validate();
        });
        function OnComplete(data) {
            $('textarea').val('');
            alert("Инициатива успешно подана");
        }
        function OnFailure(request, error) {
            alert("Произошла ошибка. Свяжитесь с администратором");
        }
        function OnSuccess(data) {
            $('#send').removeAttr("disabled");
            $('#send').attr('value', 'Отправить');
        }
        function OnBegin(request, error) {
            $('#send').attr('disabled', 'disabled');
            $('#send').attr('value', 'Обработка');
        }
    </script>

    @using (Ajax.BeginForm("SubmitSuggestion", new AjaxOptions
                                                    {
                                                        OnFailure = "OnFailure",
                                                        OnSuccess = "OnSuccess",
                                                        OnComplete = "OnComplete",
                                                        OnBegin = "OnBegin",
                                                    }))
    {

        <table>
            <tr>
                <td>
                    <label for="Problem">Проблема</label></td>
                <td>
                    <textarea id="Problem" name="Problem" rows="6" class="required"></textarea></td>
            </tr>
            <tr>
                <td>
                    <label for="Solution">Решение</label></td>
                <td>
                    <textarea id="Solution" name="Solution" rows="6" class="required"></textarea></td>
            </tr>
            <tr>
                <td>
                    <label for="Result">Результат</label></td>
                <td>
                    <textarea id="Result" name="Result" rows="6" class="required"></textarea></td>
            </tr>
        </table>
        <input id="send" type="submit" value="Отправить" />
    }
</section>
