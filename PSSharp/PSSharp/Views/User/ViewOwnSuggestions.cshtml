@{
    ViewBag.Title = "Просмотр своих инициатив";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<PSSharp.Models.Suggestion>

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>@ViewBag.Message</h2>
</hgroup>

<table>
    <tr>
        <td>
            @Html.ActionLink("Все", "ViewOwnSuggestions")
        </td>
        <td>
            @Html.ActionLink("Требующие доработки", "ViewNeedImvrovement")
        </td>
    </tr>
</table>

<section class="contact">
    <table>
        @foreach (var sugg in Model)
        {
            <tr>
                <td>
                    @sugg.LocalView()
                </td>
                <td>
                    @Html.ActionLink("Просмотр", "EditOwnSuggestion", new { id = sugg.SuggestionId })
                </td>
            </tr>
        }
    </table>
</section>
